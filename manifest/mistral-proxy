
apiVersion: apps/v1
kind: Deployment
metadata:
  name: mistral-proxy
  namespace: mistral-ns
spec:
  replicas: 1
  selector:
    matchLabels:
      app:  mistral-proxy
  template:
    metadata:
      labels:
        app:  mistral-proxy
    spec:
      containers:
      - name: mistral-proxy
        image: atostrife/mistral-proxy:1
      imagePullSecrets:
      - name: mistralproxy-secret

---

apiVersion: v1
kind: Service
metadata:
  name: mistral-proxy
  namespace: mistral-ns
spec:
  selector:
    app: mistral-proxy
  ports:
    - protocol: TCP
      port: 8080
      targetPort: 8080
  type: ClusterIP

---

apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: mistral-proxy-ingress
  namespace: mistral-ns
spec:
  ingressClassName: nginx
  rules:
  - host: mistral-proxy.oecd.org
    http:
      paths:
      - backend:
          service:
            name: mistral-proxy
            port:
              number: 8080
        path: /
        pathType: Prefix
  tls:
  - hosts:
    - mistral-proxy.oecd.org
    secretName: oecd-wildcard-internal-tls
